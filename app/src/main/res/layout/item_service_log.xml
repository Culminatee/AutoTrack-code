<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:text="Tanggal:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvOdometer"
            android:text="Odometer:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biaya Servis: Rp 0"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>


        <TextView
            android:text="Ganti Komponen Ketika: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvOliMesin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oli Mesin: -" />

        <TextView
            android:id="@+id/tvOliGardan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oli Gardan: -" />

        <TextView
            android:id="@+id/tvCVT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CVT: -" />

        <TextView
            android:id="@+id/tvKampasRem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kampas Rem: -" />

        <TextView
            android:id="@+id/tvFilterUdara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Udara: -" />

        <TextView
            android:id="@+id/tvAirRadiator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Radiator: -" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="Hapus"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    </LinearLayout>

